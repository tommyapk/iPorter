<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="6dp"
    android:id="@+id/card_view"
    card_view:cardElevation="3dp"
    card_view:cardUseCompatPadding="true">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"

        android:orientation="vertical"
        android:padding="5dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/list_root"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_person_black_24dp"
                android:layout_marginRight="10dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <!-- TextView Nama Mahasiwa -->
            <TextView
                android:id="@+id/txt_nama_mahasiswa"
                android:layout_width="match_parent"
                android:text="mahasiswa"
                android:layout_height="wrap_content" />

            <!-- TextView Npm Mahasiswa -->
            <TextView
                android:id="@+id/txt_npm_mahasiswa"
                android:layout_width="match_parent"
                android:text="161299"
                android:layout_height="wrap_content" />

            <!-- TextView NoHp Mahasiswa -->
            <TextView
                android:id="@+id/txt_nohp_mahasiswa"
                android:layout_width="match_parent"
                android:text="082396153838"
                android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:visibility="visible"
            android:layout_height="1dp"
            android:background="#C8C7C7"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:orientation="horizontal">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:gravity="center"
                android:id="@+id/btn_call"
                android:paddingHorizontal="70dp"
                android:onClick="panggil"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_phone"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:gravity="center"
                android:id="@+id/btn_chat"
                android:paddingHorizontal="70dp"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_chat"/>

        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>