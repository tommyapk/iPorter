<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10sp"
    android:orientation="vertical"
    tools:context=".activity.DetailProfilActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="fill_parent"
        android:layout_marginTop="10sp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:drawableRight="@drawable/ic_arrow"
                android:id="@+id/tv_editnama"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/ripple_effect"
                android:textSize="15sp"
                android:textColor="@color/dark"
                android:text="Nama Lengkap"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginHorizontal="10sp"
                android:background="@color/ic_color"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_arrow"
                android:textColor="@color/dark"
                android:padding="15dp"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/tv_editpass"
                android:background="@drawable/ripple_effect"
                android:textSize="15sp"
                android:text="Ubah Kata Sandi"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="fill_parent"
        android:layout_marginTop="10sp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:drawableRight="@drawable/ic_arrow"
                android:id="@+id/tv_editnohp"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/ripple_effect"
                android:textSize="15sp"
                android:textColor="@color/dark"
                android:text="Ubah Seluler"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginHorizontal="10sp"
                android:background="@color/ic_color"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_arrow"
                android:textColor="@color/dark"
                android:id="@+id/tv_editemail"
                android:padding="15dp"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/ripple_effect"
                android:textSize="15sp"
                android:text="Ganti e-mail"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginHorizontal="10sp"
                android:background="@color/ic_color"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_arrow"
                android:textColor="@color/dark"
                android:id="@+id/tv_editjkl"
                android:padding="15dp"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/ripple_effect"
                android:textSize="15sp"
                android:text="Jenis Kelamin"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginHorizontal="10sp"
                android:background="@color/ic_color"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_arrow"
                android:textColor="@color/dark"
                android:id="@+id/tv_edittgllahir"
                android:padding="15dp"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/ripple_effect"
                android:textSize="15sp"
                android:text="Tanggal Lahir"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="fill_parent"
        android:layout_below="@id/cv_pesnanan"
        android:layout_marginTop="10sp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:drawableRight="@drawable/ic_arrow"
                android:id="@+id/tv_editnorek"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/ripple_effect"
                android:textSize="15sp"
                android:textColor="@color/dark"
                android:text="Nomor Rekening"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>